extends layout
block content
  table
    thead
      tr
        th Store
        th Name
        th Price
        th Status
    tbody
      - for (const offer of offers)
        tr
          td
            case offer.store
              when "ldlc"
                | LDLC
              when "materielnet"
                | Materiel.net
              when "nvidia"
                | Nvidia
          td
            if offer.url
              a(href=offer.url target="_blank" rel="noopener noreferrer")= offer.name
            else
              = offer.name
          td= offer.price
          td= offer.status
